@model IEnumerable<HeBianGu.Product.Base.Model.JCSJ_CUSTOMER>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Start.cshtml";
}

<header>
	<!-- Datatables -->
	@*<link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
		<link href="~/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
		<link href="~/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
		<link href="~/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
		<link href="~/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">*@
</header>



<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12">
		<div class="x_panel">
			<div class="x_title">
				<h2> 客户列表 <small>Users</small></h2>
				<ul class="nav navbar-right panel_toolbox">
					<li>
						<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
					</li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
						<ul class="dropdown-menu" role="menu">
							<li>
								<a href="#">Settings 1</a>
							</li>
							<li>
								<a href="#">Settings 2</a>
							</li>
						</ul>
					</li>
					<li>
						<a class="close-link"><i class="fa fa-close"></i></a>
					</li>
				</ul>
				<div class="clearfix"></div>
			</div>
			<div class="x_content">
				<p>
					<a asp-action="Create" class="btn btn-primary">新增客户</a>
				</p>

				<table id="datatable" class="table table-striped jambo_table bulk_action">
					@*class="table"*@
					<thead>
						<tr>
							<th>
								@Html.DisplayNameFor(model => model.NAME)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.IMAGE)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.SEX)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.CARDID)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.AGE)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.TEL)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.INDATE)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.OUTDATE)
							</th>
							<th>操作</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.NAME)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.IMAGE)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.SEX)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.CARDID)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.AGE)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.TEL)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.INDATE)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.OUTDATE)
								</td>
								<td>
									<a asp-action="Edit" asp-route-id="@item.ID"  class="btn btn-success btn-xs">编辑</a> |
									<a asp-action="Details" asp-route-id="@item.ID"  class="btn btn-warning  btn-xs">详情</a> |
									<a asp-action="Delete" asp-route-id="@item.ID"  class="btn btn-danger  btn-xs">删除</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
