@model IEnumerable<HeBianGu.Product.Respository.Model.UserLoggerViewModel>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Start.cshtml";
}


<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12">
		<div class="x_panel">
			<div class="x_title">
				<h2> 系统日志 </h2>
				<ul class="nav navbar-right panel_toolbox">
					<li>
						<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
					</li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
						<ul class="dropdown-menu" role="menu">
							<li>
								<a href="#">Settings 1</a>
							</li>
							<li>
								<a href="#">Settings 2</a>
							</li>
						</ul>
					</li>
					<li>
						<a class="close-link"><i class="fa fa-close"></i></a>
					</li>
				</ul>
				<div class="clearfix"></div>
			</div>
			<div class="x_content">
				@*<p>
					<a asp-action="Create" class="btn btn-primary">新增用户</a>
				</p>*@

				<table id="datatable" class="table table-striped jambo_table bulk_action">
					@*class="table"*@
					<thead>
						<tr>
							<th>
								序号
							</th>
							<th>
								@Html.DisplayNameFor(model => model.User.USERNAME)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.TYPE)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.MESSAGE)
							</th>

							<th>
								@Html.DisplayNameFor(model => model.TIME)
							</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@for (int i = 1; i <= Model.Count(); i++)
						{
							var item = Model.ToArray()[i - 1];
						<tr>
							<td>
								@Html.DisplayFor(modelItem => i)
							</td>

							<td>
								@Html.DisplayFor(modelItem => item.User.USERNAME)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TYPE)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.MESSAGE)
							</td>

							<td>
								@Html.DisplayFor(modelItem => item.TIME)
							</td>
							@*<td>
			<a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
			<a asp-action="Details" asp-route-id="@item.ID">Details</a> |
			<a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
		</td>*@
						</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


